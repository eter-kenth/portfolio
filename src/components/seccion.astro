---
const {title} = Astro.props
---


<section>
   {title && <h2>{title}</h2>}
   <slot/>
</section>

<style>
    section{
        max-width: 750px;
        margin: 0 auto 55px;
    }

    h2{

        margin: 0px;
        margin-top: 40px;
        margin-bottom: 40px;
        font-weight: 700px;
        line-height: 1.5;
        font-size: 1.5rem;
        color: black;
        max-width: 140px;
        border-radius: 13px;
        background-color:white;
        box-shadow: 0px 0px 20px rgb(215, 186, 186,1.0);
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>